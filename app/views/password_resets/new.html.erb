<h1 class="mt-3">Forgot your password?</h1>

<%= form_with url: password_reset_path do |form| %>
    <div class="mb-3">
        <%= form.label :email%>
        <%= form.text_field :email, class: "form-control", placeholder: "steve@email.com" %>
    </div>

    <div class="mb3">
        <%= form.submit "Reset Password", class: "btn btn-primary"%>
    </div>
<% end %>